<%= render 'shared/errors', obj: @student %>

<div class="container">
    <div class="row sign-up-form">
        <div class="col s12 m12 l12">
            <div class="card-panel">
                <!--Checking if it's a new student or not if it's a new one then render the sign up-->
                <h3 class="header center"><%= @student.new_record? ? "Sign Up" : "Edit your profile" %></h3>
                <div class="row">

                        <%= form_for(@student, :html => {class: "col s12", role: "form"}) do |f| %>

                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true  %>
                                <%= f.label :name, class: "active" %>
                            </div>
                        </div>
                
                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.email_field :email, placeholder: "Enter your email", autofocus: true  %>
                                <%= f.label :email, class: "active" %>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.password_field :password, placeholder: "Choose a password", autofocus: true  %>
                                <%= f.label :password, class: "active" %>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.password_field :password_confirmation, placeholder: "Confirm your password" %>
                                <%= f.label :password_confirmation, class: "active" %>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12 center">
                                <!--Checking if it's a new student or not if it's a new one then render the sign up-->
                                <%= f.button(@student.new_record? ? '<i class="material-icons right">arrow_forward</i> Sign Up'.html_safe : '<i class="material-icons right">arrow_forward</i> Submit changes'.html_safe, class: "btn red lighten-3 waves-effect waves-light")  %>
                            </div>
                        </div>
                        
                    <% end %>
                
                </div>
            </div>
        </div>
    </div>
</div>

    